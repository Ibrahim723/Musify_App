<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:statusBarColor="@color/black"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_logo"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_round_text_field"
            android:gravity="center_vertical"
            android:text="   Search"
            android:textColor="#FFC107"
            android:textSize="20dp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Recent Searches"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >
        <ImageView
            android:id="@+id/s1"
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/despacito"/>
        <TextView
            android:layout_toRightOf="@id/s1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Song Name"/>
        <TextView
            android:layout_toRightOf="@id/s1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:text="Artist"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/cross"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >

        <ImageView
            android:id="@+id/s2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/playlist" />
        <TextView
            android:layout_toRightOf="@id/s2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Playlist Name"/>
        <TextView
            android:layout_toRightOf="@id/s2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:text="Artist"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/cross"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >
        <ImageView
            android:id="@+id/s3"
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/playlist"/>
        <TextView
            android:layout_toRightOf="@id/s3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Playlist Name"/>
        <TextView
            android:layout_toRightOf="@id/s3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:text="Artist"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/cross"/>
    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2730">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="200dp"
            android:background="@color/black">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like">
            </ImageView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/add">
            </ImageView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search">
            </ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listen_later">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Liked"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Add"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Search"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Listen Later"
                />

        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>