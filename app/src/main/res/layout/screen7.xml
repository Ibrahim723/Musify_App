<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/arrow"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/arrow_logo"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/arrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Song Title"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="By Artist"
        android:textSize="25dp"
        android:textColor="#FFC107"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp">
        <ImageView
            android:id="@+id/chatHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/account_icon"/>
        <TextView
            android:layout_toRightOf="@id/chatHead"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="    What an amazing song"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/brown_round_rectangle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/typeField"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:textSize="15dp"
            android:layout_marginTop="470dp"

            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:text="    Post a comment"
            android:textColor="@color/white"
            android:background="@drawable/brown_round_rectangle"/>

        <ImageView
            android:layout_toRightOf="@id/typeField"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="470dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/enter"/>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_alignParentBottom="true"
    android:background="#2A2730">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/like">
        </ImageView>
        <ImageView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/add">
        </ImageView>
        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search">
        </ImageView>
        <ImageView
            android:id="@+id/later"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/listen_later">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Liked"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Add"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Search"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Listen Later"
            />

    </LinearLayout>





</RelativeLayout>

</RelativeLayout>