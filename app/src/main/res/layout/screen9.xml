<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:statusBarColor="@color/black"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_logo"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/arrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Playlist"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <ImageView
           android:layout_centerInParent="true"
            android:layout_marginTop="180dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/upload"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="275dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_round_text_field"
        android:gravity="center_vertical"
        android:text="   Playlist Name"
        android:textColor="#FFC107"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_round_text_field"
        android:gravity="center_vertical"
        android:text="   Description"
        android:textColor="#FFC107"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="480dp">
        <Button
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginLeft="240dp"
            android:text="Add Playlist"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:background="@drawable/yellow_round_rectangle"/>
    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2730">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like">
            </ImageView>
            <ImageView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/add">
            </ImageView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search">
            </ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listen_later">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Liked"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Add"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Search"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Listen Later"
                />

        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>