<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:statusBarColor="@color/black"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/arrow_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Liked"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:text="2 Options / Left Selected"
            android:textColor="#68FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/brown_round_rectangle2"
            android:gravity="center_vertical"
            android:text="                                                          Music"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="131dp"
            android:background="@drawable/yellow_round_rectangle"
            android:gravity="center_vertical"
            android:text="            Playlist"
            android:textColor="#452E1B"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >

        <ImageView
            android:id="@+id/s1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/playlist" />
        <TextView
            android:layout_toRightOf="@id/s1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Playlist 1"/>
        <TextView
            android:layout_toRightOf="@id/s1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:text="Artist"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/dot_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/s1"
            android:text="Tracks: 8"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="320dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >

        <ImageView
            android:id="@+id/s2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/playlist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/s2"
            android:text="Playlist 2"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@id/s2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="15dp"
            android:text="Artist"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/dot_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/s2"
            android:text="Tracks: 3"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2730">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="0dp"
            android:background="@color/black">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like">
            </ImageView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/add">
            </ImageView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search">
            </ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listen_later">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>