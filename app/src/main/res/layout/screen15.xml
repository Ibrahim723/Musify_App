<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:statusBarColor="@color/black"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Select Playlist"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="350dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Next"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="360dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Skip"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            />
    </RelativeLayout>

    <ImageView

        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/yellow_shape"/>

    <ImageView

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="330dp"
        android:background="@drawable/add_button"/>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2730">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="100dp"
            android:background="@color/black">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like">
            </ImageView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/add">
            </ImageView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search">
            </ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listen_later">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Liked"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Add"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Search"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="Listen Later"
                />

        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>