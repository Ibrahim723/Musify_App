<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520dp"
            android:layout_width="425dp"
            android:layout_height="100dp"
            android:background="@drawable/black_round_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="535dp"
            android:text="Song Name"
            android:textColor="#FFC107"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="525dp"
            android:layout_marginLeft="245dp"
            android:gravity="center"
            android:weightSum="4">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/previous_button" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"

                android:background="@drawable/play" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"

                android:background="@drawable/next_button" />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/menu_lines" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/account_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="Playlists"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tile1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playlist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC107"
                android:layout_below="@+id/tile1"
                android:layout_centerInParent="true"
                android:text="Playlist 1"
                android:textSize="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tile2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playlist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC107"
                android:layout_below="@+id/tile2"
                android:layout_centerInParent="true"
                android:text="Playlist 2"
                android:textSize="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tile3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playlist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC107"
                android:layout_below="@+id/tile3"
                android:layout_centerInParent="true"
                android:text="Playlist 3"
                android:textSize="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:text="Artists"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tile4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/atif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    android:layout_below="@+id/tile4"
                    android:layout_centerInParent="true"
                    android:text="Artist 1"
                    android:textSize="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="80dp"
                android:layout_marginLeft="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tile5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/atif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    android:layout_below="@+id/tile5"
                    android:layout_centerInParent="true"
                    android:text="Artist 2"
                    android:textSize="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="80dp"
                android:layout_marginLeft="300dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tile6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/atif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    android:layout_below="@+id/tile6"
                    android:layout_centerInParent="true"
                    android:text="Artist 3"
                    android:textSize="15dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2730">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like">
            </ImageView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/add">
            </ImageView>
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search">
            </ImageView>
            <ImageView
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listen_later">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>